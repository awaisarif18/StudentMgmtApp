@model StudentMgmtApp.Models.EnrollmentFormViewModel
@{
    ViewBag.Title = "Edit Enrollment";
}
<h2>Edit Enrollment</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.EnrollmentId)
    <div class="form-group">
        @Html.LabelFor(m => m.StudentId, "Student")
        @Html.DropDownListFor(m => m.StudentId, Model.Students, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CourseId, "Course")
        @Html.DropDownListFor(m => m.CourseId, Model.Courses, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SemesterId, "Semester")
        @Html.DropDownListFor(m => m.SemesterId, Model.Semesters, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Grade)
        @Html.TextBoxFor(m => m.Grade, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
}