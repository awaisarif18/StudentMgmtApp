@model StudentMgmtApp.Models.EnrollmentViewModel
@{
    ViewBag.Title = "Delete Enrollment";
}
<h2>Delete Enrollment</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.EnrollmentId)</dt>
        <dd>@Model.EnrollmentId</dd>
        <dt>@Html.DisplayName("Student")</dt>
        <dd>@Model.StudentName</dd>
        <dt>@Html.DisplayName("Course")</dt>
        <dd>@Model.CourseTitle</dd>
        <dt>@Html.DisplayName("Semester")</dt>
        <dd>@Model.SemesterName</dd>
        <dt>@Html.DisplayNameFor(m => m.Grade)</dt>
        <dd>@Model.Grade</dd>
    </dl>
</div>
@using (Html.BeginForm("Delete", "Enrollments", new { id = Model.EnrollmentId }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Delete</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
}