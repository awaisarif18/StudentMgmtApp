@model StudentMgmtApp.Models.EnrollmentViewModel
@{
    ViewBag.Title = "Enrollment Details";
}
<h2>Enrollment Details</h2>
<div>
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.EnrollmentId)</dt>
        <dd>@Model.EnrollmentId</dd>
        <dt>@Html.DisplayName("Student")</dt>
        <dd>@Model.StudentName</dd>
        <dt>@Html.DisplayName("Course")</dt>
        <dd>@Model.CourseTitle</dd>
        <dt>@Html.DisplayName("Semester")</dt>
        <dd>@Model.SemesterName</dd>
        <dt>@Html.DisplayNameFor(m => m.Grade)</dt>
        <dd>@Model.Grade</dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.EnrollmentId }) |
    @Html.ActionLink("Back to List", "Index")
</p>