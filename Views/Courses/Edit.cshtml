@model StudentMgmtApp.Models.CourseFormViewModel
@{
    ViewBag.Title = "Edit Course";
}
<h2>Edit Course</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.CourseId)
    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Credits)
        @Html.TextBoxFor(m => m.Credits, new { @class = "form-control", type = "number" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DepartmentId, "Department")
        @Html.DropDownListFor(m => m.DepartmentId, Model.Departments, "--Select--", new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
}