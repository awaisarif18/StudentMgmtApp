@model StudentMgmtApp.Models.CourseViewModel
@{
    ViewBag.Title = "Delete Course";
}
<h2>Delete Course</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.CourseId)</dt>
        <dd>@Model.CourseId</dd>
        <dt>@Html.DisplayNameFor(m => m.Title)</dt>
        <dd>@Model.Title</dd>
        <dt>@Html.DisplayNameFor(m => m.Credits)</dt>
        <dd>@Model.Credits</dd>
        <dt>@Html.DisplayName("Department")</dt>
        <dd>@Model.DepartmentName</dd>
    </dl>
</div>
@using (Html.BeginForm("Delete", "Courses", new { id = Model.CourseId }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Delete</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
}