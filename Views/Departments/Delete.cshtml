@model StudentMgmtApp.Models.DepartmentViewModel
@{
    ViewBag.Title = "Delete Department";
}
<h2>Delete Department</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.DepartmentId)</dt>
        <dd>@Model.DepartmentId</dd>
        <dt>@Html.DisplayNameFor(m => m.Name)</dt>
        <dd>@Model.Name</dd>
    </dl>
</div>
@using (Html.BeginForm("DeleteConfirmed", "Departments", new { id = Model.DepartmentId }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Delete</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
}