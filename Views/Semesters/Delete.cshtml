@model StudentMgmtApp.Models.SemesterViewModel
@{
    ViewBag.Title = "Delete Semester";
}
<h2>Delete Semester</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.SemesterId)</dt>
        <dd>@Model.SemesterId</dd>
        <dt>@Html.DisplayNameFor(m => m.Name)</dt>
        <dd>@Model.Name</dd>
        <dt>@Html.DisplayNameFor(m => m.StartDate)</dt>
        <dd>@Model.StartDate.ToShortDateString()</dd>
        <dt>@Html.DisplayNameFor(m => m.EndDate)</dt>
        <dd>@Model.EndDate.ToShortDateString()</dd>
    </dl>
</div>
@using (Html.BeginForm("Delete", "Semesters", new { id = Model.SemesterId }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Delete</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
}