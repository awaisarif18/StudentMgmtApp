@model StudentMgmtApp.Models.StudentViewModel
@{
    ViewBag.Title = "Delete Student";
}
<h2>Delete Student</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.StudentId)</dt>
        <dd>@Model.StudentId</dd>
        <dt>@Html.DisplayNameFor(m => m.FirstName)</dt>
        <dd>@Model.FirstName</dd>
        <dt>@Html.DisplayNameFor(m => m.LastName)</dt>
        <dd>@Model.LastName</dd>
        <dt>@Html.DisplayNameFor(m => m.Email)</dt>
        <dd>@Model.Email</dd>
        <dt>@Html.DisplayName("Department")</dt>
        <dd>@Model.DepartmentName</dd>
    </dl>
</div>
@using (Html.BeginForm("Delete", "Students", new { id = Model.StudentId }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Delete</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
}